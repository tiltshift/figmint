{
  "name": "figmint",
  "version": "1.0.0",
  "description": "Sync Between Figma and Your Javascript/Typescript Project",
  "repository": "https://github.com/tiltshift/figmint",
  "license": "MIT",
  "bin": "./bin/figmint.js",
  "source": "src/figmint.tsx",
  "main": "bin/figmint.js",
  "types": "bin/figmint.d.ts",
  "files": [
    "bin"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "packageManager": "yarn@3.2.0",
  "dependencies": {
    "@types/lodash": "^4.14.184",
    "dev": "^0.1.3",
    "esbuild": "^0.15.5",
    "figma-js": "^1.16.0",
    "lodash": "4.17.21",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "utils": "^0.3.1"
  },
  "devDependencies": {
    "@types/node": "^18.7.11",
    "@types/prettier": "^2.7.0",
    "@types/react": "^18.0.17",
    "@types/rimraf": "^3.0.2",
    "@types/tinycolor2": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.33.1",
    "babel-eslint": "10.1.0",
    "cosmiconfig": "^7.0.1",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "3.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "1.x",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.5",
    "image-type": "^4.1.0",
    "ink": "^3.2.0",
    "ink-box": "^1.0.0",
    "ink-gradient": "^2.0.0",
    "ink-spinner": "^4.0.3",
    "lint-staged": "^13.0.3",
    "parcel": "^2.7.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "tinycolor2": "^1.4.2",
    "typescript": "^4.7.4",
    "use-interval": "^1.4.0"
  },
  "engines": {
    "node": ">=12"
  },
  "targets": {
    "main": {
      "distDir": "bin",
      "includeNodeModules": true,
      "sourceMap": false,
      "optimize": false
    }
  },
  "scripts": {
    "build": "parcel build --target main && yarn build-types",
    "es": "esbuild src/figmint.tsx --bundle --platform=node --outfile=bin/figmint.js --sourcemap",
    "watch": "parcel watch src/index.tsx --dist-dir bin --target node --bundle-node-modules --out-file figmint.js",
    "type-check": "tsc --noEmit",
    "build-types": "tsc src/utils/types.ts --outDir bin --declaration --emitDeclarationOnly",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "gh-pages": "gh-pages -d example/dist -m \"Update Github pages\"",
    "release": "yarn build && yarn publish"
  }
}